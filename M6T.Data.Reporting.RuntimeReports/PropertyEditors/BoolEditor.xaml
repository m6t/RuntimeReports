<UserControl x:Class="M6T.Data.Reporting.RuntimeReports.BoolEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M6T.Data.Reporting.RuntimeReports"
             mc:Ignorable="d" d:DesignWidth="300" Height="28" Background="#FF252526">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="name" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
        <CheckBox x:Name="cc" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Unchecked="cc_Unchecked" Checked="cc_Checked"/>

    </Grid>
</UserControl>
