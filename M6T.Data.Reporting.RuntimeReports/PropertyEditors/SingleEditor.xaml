<UserControl x:Class="M6T.Data.Reporting.RuntimeReports.SingleEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M6T.Data.Reporting.RuntimeReports"
             mc:Ignorable="d" Background="#FF2C2C2C" d:DesignWidth="300" Height="27.926">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="name" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
        <TextBox  Height="18" BorderBrush="#FF434346"  Background="#FF333337" Foreground="#FFFFF3FF" x:Name="value"  Margin="10,4,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Grid.Column="1" LostFocus="value_LostFocus" KeyDown="value_LostFocus"/>

    </Grid>
</UserControl>
