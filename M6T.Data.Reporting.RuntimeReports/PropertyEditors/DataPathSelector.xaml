<UserControl x:Class="M6T.Data.Reporting.RuntimeReports.DataPathSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M6T.Data.Reporting.RuntimeReports"
             mc:Ignorable="d" d:DesignWidth="300" Background="#FF2C2C2C" Height="27">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Gösterilecek Veri" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="path" VerticalAlignment="Top" Grid.Column="1" Margin="10,2,10,0" SelectionChanged="path_SelectionChanged"/>

    </Grid>
</UserControl>
