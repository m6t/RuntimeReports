<UserControl x:Class="M6T.Data.Reporting.RuntimeReports.EnumEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M6T.Data.Reporting.RuntimeReports"
             mc:Ignorable="d" d:DesignWidth="300" Background="#FF2C2C2C" Height="30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="name" Content="Prop.name" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
        <ComboBox x:Name="select" VerticalAlignment="Top" Margin="10,4,10,0" Grid.Column="1" SelectionChanged="select_SelectionChanged"/>

    </Grid>
</UserControl>
